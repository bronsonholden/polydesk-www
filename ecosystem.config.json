{
  "apps" : [
    {
      "name"        : "polydesk-www",
      "script"      : "http-server current/dist/polydesk-www -p 4200",
      "watch"       : true,
      "ignore_watch" : [
        "node_modules"
      ],
      "watch_options": {
        "followSymlinks": false
      },
      "env": {
        "NODE_ENV": "development",
        "PATH": "$PATH:$(npm bin -g)"
      },
      "env_production" : {
         "NODE_ENV": "production",
         "PATH": "$PATH:$(npm bin -g)"
      }
    }
  ]
}
